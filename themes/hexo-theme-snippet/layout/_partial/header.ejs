<header class="main-header" <% if(theme.banner.img){ %> style="background-image:url(<%= url_for(theme.banner.img) %>)" <%}%> >
    <div class="main-header-box">
        <div class="canvas-box">
            <canvas id="canvas"></canvas>
        </div>
        <a class="header-avatar" href="/" title='<%= config.author %>'>
            <%- image_tag('img/avatar.jpg',{alt:'logo头像',class:'img-responsive center-block'}) %>
        </a>
        <div class="branding">
            <% if(theme.branding){ %>
                <h2> <%= theme.branding %> </h2>
            <% } else { %>
                 <%- image_tag('img/branding.png',{alt:'没钱，不谈理想',class:'img-responsive center-block'}) %>
            <% } %>
    	</div>
    </div>
</header>
